@model IEnumerable<GymLinkPro.Models.GymClass>

@{
    ViewData["Title"] = "Gym Classes";
    var trainers = ViewBag.Trainers as Dictionary<int, string>;
}

<h1>Gym Classes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().Description)</th>
            <th>@Html.DisplayNameFor(m => m.First().StartTime)</th>
            <th>@Html.DisplayNameFor(m => m.First().EndTime)</th>
            <th>Trainer</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(item.ImagePath))
                {
                    <img src="@item.ImagePath" alt="Class Image" style="max-width:80px;max-height:80px;" />
                }
            </td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.StartTime?.ToString(@"hh\:mm")</td>
            <td>@item.EndTime?.ToString(@"hh\:mm")</td>
            <td>@(trainers != null && trainers.ContainsKey(item.TrainerId) ? trainers[item.TrainerId] : "Unknown")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GymClassId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GymClassId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GymClassId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@{
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)">Previous</a>
        </li>
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
            </li>
        }
        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)">Next</a>
        </li>
    </ul>
</nav>