@model IEnumerable<GymLinkPro.Models.ClassRegistration>

@{
    ViewData["Title"] = "Class Registrations";
    var memberNames = ViewBag.MemberNames as Dictionary<int, string>;
    var classNames = ViewBag.ClassNames as Dictionary<int, string>;
}

<h1>Class Registrations</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Member</th>
            <th>Class</th>
            <th>@Html.DisplayNameFor(m => m.First().Status)</th>
            <th>@Html.DisplayNameFor(m => m.First().RegistrationDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @(memberNames != null && memberNames.ContainsKey(item.MemberId)
                    ? memberNames[item.MemberId]
                    : "Unknown")
            </td>
            <td>
                @(classNames != null && classNames.ContainsKey(item.ClassId)
                    ? classNames[item.ClassId]
                    : "Unknown")
            </td>
            <td>@item.Status</td>
            <td>@item.RegistrationDate.ToString("g")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClassRegistrationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClassRegistrationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClassRegistrationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)">Previous</a>
        </li>
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
            </li>
        }
        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)">Next</a>
        </li>
    </ul>
</nav>