@model GymLinkPro.Models.ClassRegistration

@{
    ViewData["Title"] = "Class Registration Details";
    var memberNames = ViewBag.MemberNames as Dictionary<int, string>;
    var classNames = ViewBag.ClassNames as Dictionary<int, string>;
}

<h1>Class Registration Details</h1>

<div>
    <h4>ClassRegistration</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Member</dt>
        <dd class="col-sm-10">
            @(memberNames != null && memberNames.ContainsKey(Model.MemberId)
                ? memberNames[Model.MemberId]
                : "Unknown")
        </dd>
        <dt class="col-sm-2">Class</dt>
        <dd class="col-sm-10">
            @(classNames != null && classNames.ContainsKey(Model.ClassId)
                ? classNames[Model.ClassId]
                : "Unknown")
        </dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
        <dt class="col-sm-2">RegistrationDate</dt>
        <dd class="col-sm-10">@Model.RegistrationDate.ToString("g")</dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.ClassRegistrationId" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>