@model GymLinkPro.Models.ClassRegistration

@{
    ViewData["Title"] = "Edit Class Registration";
}

<h1>Edit Class Registration</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ClassRegistrationId" />
    <div class="form-group">
        <label asp-for="MemberId"></label>
        <input asp-for="MemberId" class="form-control" />
        <span asp-validation-for="MemberId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClassId"></label>
        <input asp-for="ClassId" class="form-control" />
        <span asp-validation-for="ClassId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RegistrationDate"></label>
        <input asp-for="RegistrationDate" class="form-control" />
        <span asp-validation-for="RegistrationDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>