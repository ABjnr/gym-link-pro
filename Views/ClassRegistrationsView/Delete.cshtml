@model GymLinkPro.Models.ClassRegistration

@{
    ViewData["Title"] = "Delete Class Registration";
}

<h1>Delete Class Registration</h1>

<h3>Are you sure you want to delete this registration?</h3>
<div>
    <h4>ClassRegistration</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">MemberId</dt>
        <dd class="col-sm-10">@Model.MemberId</dd>
        <dt class="col-sm-2">ClassId</dt>
        <dd class="col-sm-10">@Model.ClassId</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
        <dt class="col-sm-2">RegistrationDate</dt>
        <dd class="col-sm-10">@Model.RegistrationDate.ToString("g")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ClassRegistrationId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>