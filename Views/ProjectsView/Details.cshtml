@model GymLinkPro.Models.Project

@{
    ViewData["Title"] = "Project Details";
}

<h1>Project Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Creator</dt>
        <dd class="col-sm-10">@($"{Model.Creator?.FirstName} {Model.Creator?.LastName}")</dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.ProjectId" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>