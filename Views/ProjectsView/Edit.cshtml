@model GymLinkPro.Models.Project

@{
    ViewData["Title"] = "Edit Project";
}

<h1>Edit Project</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProjectId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CreatorId"></label>
        <select asp-for="CreatorId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Users, "UserId", "Name"))">
            <option value="">-- Select Creator --</option>
        </select>
        <span asp-validation-for="CreatorId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>